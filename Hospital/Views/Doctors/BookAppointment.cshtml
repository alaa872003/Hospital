
<div class="row">
    <h1>Book Appointment</h1>
</div>

<br>
<br>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="~/images/@item.Img" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Specialization:@item.Specialization</p>
                    <a href="/Doctors/CompleteAppointment/@item.Id" class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>
